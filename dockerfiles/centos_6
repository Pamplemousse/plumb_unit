FROM centos:6

MAINTAINER cc_doc_nfc.oab@orange.com <cc_doc_nfc.oab@orange.com>

VOLUME [ "/sys/fs/cgroup" ]

ENV container docker

RUN yum -y update; yum clean all

RUN yum install -y sudo vim git epel-release
RUN yum install -y python-pip python-devel gcc.x86_64 openssl-devel libffi-devel
RUN pip install --upgrade pip
RUN pip install --upgrade PyYAML jinja2 paramiko ansible dnspython setuptools pyasn1

RUN rpm -Uvh https://centos6.iuscommunity.org/ius-release.rpm
RUN yum -y install python27 python27-devel python27-pip python27-setuptools python27-virtualenv --enablerepo=ius
RUN rm /usr/bin/python
RUN ln /usr/bin/python2.7 /usr/bin/python

# Add a local user to avoid running ansible as root. This user has a name
RUN useradd -ms /bin/bash -c "Robert Paulson" rpaulson
RUN echo "rpaulson ALL=(root) NOPASSWD: ALL" > /etc/sudoers.d/rpaulson

CMD ["/sbin/init"]
